---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/product', label: 'Product' },
  { href: '/science', label: 'Science' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' }
];
---
<header class="border-b border-neutral-200/70 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60 sticky top-0 z-50">
  <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.svg" alt="Evergreen Assessments" loading="eager" />
      <span class="font-semibold tracking-tight">Evergreen Assessments</span>
    </a>
    <nav class="hidden md:flex items-center gap-6 text-sm text-neutral-700">
      {nav.map((n) => (
        <a class="hover:text-black" href={n.href}>{n.label}</a>
      ))}
      <a href="/contact" class="rounded-xl border px-3 py-1.5 hover:bg-black hover:text-white transition">Contact</a>
    </nav>
    <a href="#waitlist" class="md:hidden rounded-xl border px-3 py-1.5">Join</a>
  </div>
</header>
